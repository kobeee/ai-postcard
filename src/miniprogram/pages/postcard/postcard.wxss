/* postcard.wxss - 明信片详情页样式 */

/* 页面基础 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #fff;
  font-size: 32rpx;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  text-align: center;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.error-text {
  color: #fff;
  font-size: 32rpx;
  margin-bottom: 48rpx;
  line-height: 1.4;
}

.retry-btn {
  background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 30rpx;
}

/* 明信片容器 */
.postcard-container {
  max-width: 750rpx;
  margin: 0 auto;
}

/* 图片区域 */
.image-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10px);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.postcard-image {
  width: 100%;
  min-height: 400rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

/* 信息区域 */
.info-section {
  margin-bottom: 40rpx;
}

.content-card, .meta-card, .interactive-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  backdrop-filter: blur(10px);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.copy-btn, .preview-btn {
  font-size: 32rpx;
  padding: 8rpx;
  cursor: pointer;
}

.postcard-content {
  font-size: 30rpx;
  color: #4a5568;
  line-height: 1.6;
  display: block;
}

/* 元信息 */
.meta-item {
  display: flex;
  margin-bottom: 16rpx;
}

.meta-item:last-child {
  margin-bottom: 0;
}

.meta-label {
  font-size: 28rpx;
  color: #718096;
  width: 160rpx;
  flex-shrink: 0;
}

.meta-value {
  font-size: 28rpx;
  color: #2d3748;
  flex: 1;
}

/* 交互预览 */
.interactive-desc {
  font-size: 26rpx;
  color: #718096;
  line-height: 1.4;
}

/* 操作按钮区域 */
.actions-section {
  margin-bottom: 40rpx;
}

.action-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.action-row:last-child {
  margin-bottom: 0;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx 16rpx;
  border-radius: 20rpx;
  border: none;
  font-size: 26rpx;
  font-weight: 500;
  backdrop-filter: blur(10px);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
  color: #fff;
}

.action-btn.secondary {
  background: rgba(255, 255, 255, 0.9);
  color: #2d3748;
}

.action-btn.danger {
  background: linear-gradient(135deg, #f56565 0%, #e53e3e 100%);
  color: #fff;
}

.action-btn.button-hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.btn-icon {
  font-size: 36rpx;
  margin-bottom: 12rpx;
}

.btn-text {
  font-size: 24rpx;
}

/* 底部信息 */
.footer-section {
  text-align: center;
  padding: 40rpx 20rpx;
}

.footer-text {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 12rpx;
}

.footer-link {
  font-size: 26rpx;
  color: #fff;
  text-decoration: underline;
  cursor: pointer;
}

/* 响应式适配 */
@media screen and (max-width: 750px) {
  .container {
    padding: 16rpx;
  }
  
  .content-card, .meta-card, .interactive-card {
    padding: 24rpx;
  }
  
  .action-btn {
    padding: 24rpx 12rpx;
  }
  
  .btn-icon {
    font-size: 32rpx;
  }
}