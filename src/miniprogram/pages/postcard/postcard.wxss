/* postcard.wxss - 明信片详情页样式 */

/* 页面基础 */
page {
  /* 主题色彩变量 */
  --primary-color: #6366f1;
  --secondary-color: #8b5cf6;
  --accent-color: #10b981;
  --error-color: #ef4444;
  --warning-color: #f59e0b;
  --success-color: #10b981;
  
  /* 文本色彩 */
  --text-primary: #1e293b;
  --text-secondary: #64748b;
  --text-light: rgba(255, 255, 255, 0.9);
  --text-muted: rgba(255, 255, 255, 0.7);
  
  /* 背景色彩 */
  --bg-gradient: linear-gradient(180deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  --bg-card: rgba(255, 255, 255, 0.95);
  --bg-overlay: rgba(0, 0, 0, 0.1);
  
  /* 边框和阴影 */
  --border-radius: 20rpx;
  --border-radius-large: 24rpx;
  --box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  
  background: var(--bg-gradient);
  background-attachment: fixed;
  min-height: 100vh;
  height: 100%;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background: transparent;
  position: relative;
}

/* 升级页面背景装饰效果 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 200vh;
  background: 
    var(--bg-gradient),
    radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  z-index: -1;
  pointer-events: none;
}

/* 隐藏的截图Canvas */
.share-canvas,
.screenshot-canvas {
  position: fixed;
  top: -9999rpx;
  left: -9999rpx;
  width: 750rpx;
  height: 1000rpx;
  z-index: -1;
}

/* 🔮 心象签主显示区域 - 详情页挂件布局 */
.charm-main-area {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  min-height: 70vh;  /* 适中的高度，确保有足够空间显示 */
  padding: 20rpx;
  margin: 20rpx auto 40rpx auto; /* 增加上下边距 */
  box-sizing: border-box;
  position: relative;
  z-index: 10;
}

/* 挂件组件样式优化 */
.charm-main-area hanging-charm {
  filter: drop-shadow(0 20rpx 40rpx rgba(0, 0, 0, 0.15));
  transition: transform 0.3s ease;
  z-index: 11;
}

/* 降级显示区域 */
.fallback-card-area {
  width: 90%;
  max-width: 600rpx;
  margin: 40rpx auto;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.1);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  /* 升级加载动画效果 */
  border: 4rpx solid rgba(255, 255, 255, 0.2);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
  box-shadow: 0 0 20rpx rgba(255, 255, 255, 0.3);
}

@keyframes spin {
  0% { 
    transform: rotate(0deg); 
    box-shadow: 0 0 20rpx rgba(255, 255, 255, 0.3);
  }
  100% { 
    transform: rotate(360deg); 
    box-shadow: 0 0 30rpx rgba(255, 255, 255, 0.5);
  }
}

.loading-text {
  color: var(--text-light);
  font-size: 32rpx;
  /* 添加加载文字效果 */
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  background: linear-gradient(135deg, #fff 0%, rgba(255, 255, 255, 0.8) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  text-align: center;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  /* 添加错误图标发光效果 */
  filter: drop-shadow(0 0 20rpx rgba(239, 68, 68, 0.5));
}

.error-text {
  color: var(--text-light);
  font-size: 32rpx;
  margin-bottom: 48rpx;
  line-height: 1.4;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.retry-btn {
  /* 升级重试按钮效果 */
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  color: var(--text-light);
  border: none;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 30rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(99, 102, 241, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.retry-btn:hover {
  transform: translateY(-4rpx) scale(1.02);
  box-shadow: 
    0 12rpx 40rpx rgba(99, 102, 241, 0.5),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
}

/* 明信片容器 */
.postcard-container {
  max-width: 95%;
  margin: 0 auto;
}

/* 动态组件区域 */
.dynamic-section {
  position: relative;
  /* 升级动态区域背景效果 */
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.98) 0%, 
    rgba(255, 255, 255, 0.95) 100%);
  border-radius: 28rpx;
  padding: 0;
  margin-bottom: 32rpx;
  backdrop-filter: blur(15rpx);
  box-shadow: 
    0 12rpx 40rpx rgba(0, 0, 0, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.component-badge {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  display: flex;
  gap: 8rpx;
  z-index: 10;
}

.ai-tag {
  /* 升级AI标签效果 */
  background: linear-gradient(45deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.animation-tag {
  /* 升级动画标签效果 */
  background: linear-gradient(45deg, #ff6b6b 0%, #feca57 100%);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.4);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.interactive-tag {
  /* 升级交互标签效果 */
  background: linear-gradient(45deg, #48bb78 0%, #38a169 100%);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(72, 187, 120, 0.4);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* 图片区域 */
.image-section {
  /* 升级图片区域效果 */
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.98) 0%, 
    rgba(255, 255, 255, 0.95) 100%);
  border-radius: 28rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(15rpx);
  box-shadow: 
    0 12rpx 40rpx rgba(0, 0, 0, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.image-badge {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  z-index: 5;
}

.postcard-image {
  width: 100%;
  min-height: 400rpx;
  border-radius: 20rpx;
  /* 升级图片阴影效果 */
  box-shadow: 
    0 12rpx 32rpx rgba(0, 0, 0, 0.15),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.postcard-image:hover {
  transform: scale(1.02);
  box-shadow: 
    0 16rpx 48rpx rgba(0, 0, 0, 0.2),
    0 0 0 1rpx rgba(255, 255, 255, 0.3);
}

/* 信息区域 */
.info-section {
  margin-bottom: 40rpx;
}

.content-card, .meta-card, .interactive-card {
  /* 升级信息卡片效果 */
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.98) 0%, 
    rgba(255, 255, 255, 0.95) 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  backdrop-filter: blur(15rpx);
  box-shadow: 
    0 12rpx 40rpx rgba(0, 0, 0, 0.12),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.content-card:hover, .meta-card:hover, .interactive-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 
    0 16rpx 48rpx rgba(0, 0, 0, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.content-card-title {
  font-size: 32rpx;
  font-weight: 600;
  /* 升级卡片标题效果 */
  background: linear-gradient(135deg, var(--text-primary) 0%, var(--primary-color) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.copy-btn, .preview-btn {
  font-size: 32rpx;
  padding: 8rpx;
  cursor: pointer;
  /* 添加按钮悬停效果 */
  transition: all 0.3s ease;
  border-radius: 8rpx;
}

.copy-btn:hover, .preview-btn:hover {
  background: rgba(99, 102, 241, 0.1);
  transform: scale(1.1);
}

.postcard-content {
  font-size: 30rpx;
  color: #4a5568;
  line-height: 1.6;
  display: block;
}

/* 元信息 */
.meta-item {
  display: flex;
  margin-bottom: 16rpx;
  /* 添加元信息项装饰 */
  padding: 12rpx;
  background: rgba(99, 102, 241, 0.05);
  border-radius: 12rpx;
  border-left: 4rpx solid var(--primary-color);
}

.meta-item:last-child {
  margin-bottom: 0;
}

.meta-label {
  font-size: 28rpx;
  color: #718096;
  width: 160rpx;
  flex-shrink: 0;
  font-weight: 600;
}

.meta-value {
  font-size: 28rpx;
  color: #2d3748;
  flex: 1;
}

/* 交互预览 */
.interactive-desc {
  font-size: 26rpx;
  color: #718096;
  line-height: 1.4;
}

/* 操作按钮区域 */
.actions-section {
  margin-bottom: 40rpx;
}

.action-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.action-row:last-child {
  margin-bottom: 0;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx;
  border: none;
  font-size: 26rpx;
  font-weight: 500;
  backdrop-filter: blur(15rpx);
  /* 升级操作按钮阴影效果 */
  box-shadow: 
    0 8rpx 24rpx rgba(0, 0, 0, 0.12),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  position: relative;
  overflow: hidden;
}

/* 添加按钮光效 */
.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent, 
    rgba(255, 255, 255, 0.2), 
    transparent);
  transition: left 0.6s;
}

.action-btn:hover::before,
.action-btn.button-hover::before {
  left: 100%;
}

.action-btn.primary {
  /* 升级主要按钮效果 */
  background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
  color: #fff;
  box-shadow: 
    0 8rpx 24rpx rgba(72, 187, 120, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

.action-btn.secondary {
  /* 升级次要按钮效果 */
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.95) 0%, 
    rgba(255, 255, 255, 0.9) 100%);
  color: #2d3748;
  border: 2rpx solid rgba(99, 102, 241, 0.2);
}

.action-btn.danger {
  /* 升级危险按钮效果 */
  background: linear-gradient(135deg, #f56565 0%, #e53e3e 100%);
  color: #fff;
  box-shadow: 
    0 8rpx 24rpx rgba(245, 101, 101, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

.action-btn.button-hover {
  transform: translateY(-6rpx) scale(1.02);
  box-shadow: 
    0 16rpx 40rpx rgba(0, 0, 0, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
}

.btn-icon {
  font-size: 36rpx;
  margin-bottom: 12rpx;
  /* 添加图标发光效果 */
  filter: drop-shadow(0 2rpx 8rpx rgba(0, 0, 0, 0.2));
}

.btn-text {
  font-size: 24rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 底部信息 */
.footer-section {
  text-align: center;
  padding: 40rpx 20rpx;
}

.footer-text {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.footer-link {
  font-size: 26rpx;
  color: #fff;
  text-decoration: underline;
  cursor: pointer;
  /* 添加链接悬停效果 */
  transition: all 0.3s ease;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.footer-link:hover {
  color: rgba(255, 255, 255, 0.8);
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5);
}

/* ===== 🔥 详情页专用卡片区域 ===== */
.detail-card-section {
  margin-bottom: 40rpx;
}

.main-detail-oracle-card {
  width: 100%;
}

/* 降级模式提示 */
.fallback-notice {
  text-align: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 20rpx;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(245, 158, 11, 0.1);
}

.notice-text {
  font-size: 24rpx;
  color: #d97706;
  font-weight: 500;
}

/* ===== ✅ 结构化明信片区域 ===== */
.structured-card-section {
  margin-bottom: 40rpx;
}

.success-indicator {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12rpx;
  margin-top: 16rpx;
  padding: 12rpx 24rpx;
  /* 升级成功指示器效果 */
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  border-radius: 28rpx;
  max-width: 400rpx;
  margin-left: auto;
  margin-right: auto;
  box-shadow: 
    0 8rpx 24rpx rgba(16, 185, 129, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.success-text, .parse-status {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* ===== 🔥 降级方案：全新超简单卡片 ===== */
.new-simple-card {
  background: var(--primary-color);
  margin: 30rpx;
  padding: 50rpx;
  border-radius: var(--border-radius);
  text-align: center;
  position: relative;
}

.simple-card-title {
  display: block;
  color: var(--text-light);
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.card-content {
  display: block;
  color: white;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.card-time {
  display: block;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

/* ===== 🎯 超级简单的固定卡片样式（注释掉） ===== */
.simple-card {
  width: 690rpx;
  margin: 0 auto 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  position: relative;
  overflow: hidden;
}

.card-header-section {
  text-align: center;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 2;
}

.card-main-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.card-subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.card-image-section {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.3;
  z-index: 1;
}

.card-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.card-content-section {
  position: relative;
  z-index: 2;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 32rpx;
  backdrop-filter: blur(10rpx);
  margin-bottom: 32rpx;
}

.main-text-area {
  margin-bottom: 24rpx;
}

.content-text {
  display: block;
  font-size: 30rpx;
  line-height: 1.6;
  color: #fff;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.5);
  font-weight: 500;
}

.meta-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  padding-top: 20rpx;
}

.location-info, .weather-info {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.card-decoration {
  text-align: center;
  position: relative;
  z-index: 2;
}

.deco-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 600;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

/* 调试区域 */
.debug-section {
  background: rgba(0, 0, 0, 0.8);
  border-radius: 16rpx;
  margin: 0 auto 40rpx;
  width: 690rpx;
  max-height: 300rpx;
  overflow: hidden;
}

.debug-header {
  background: rgba(255, 255, 255, 0.1);
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.debug-title {
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
}

.debug-content {
  padding: 24rpx;
  max-height: 240rpx;
  overflow-y: scroll;
}

.debug-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
  line-height: 1.4;
  word-break: break-all;
}

/* ===== 新增：结构化明信片样式 ===== */
.structured-section {
  position: relative;
  margin-bottom: 40rpx;
  border-radius: 28rpx;
  overflow: hidden;
  /* 升级结构化区域阴影效果 */
  box-shadow: 
    0 16rpx 48rpx rgba(0, 0, 0, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.98) 0%, 
    rgba(255, 255, 255, 0.95) 100%);
  backdrop-filter: blur(15rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.structured-badge {
  /* 升级结构化标识效果 */
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.4);
}

.dynamic-badge {
  /* 升级动态标识效果 */
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.4);
}

.data-tag {
  background: rgba(255, 255, 255, 0.3);
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  margin-left: 8rpx;
  /* 添加数据标签阴影 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* ===== 内容显示优化 ===== */
.structured-content-summary {
  padding: 24rpx;
  /* 升级内容摘要背景效果 */
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border-radius: 20rpx;
  border: 2rpx solid #0284c7;
  margin-bottom: 16rpx;
  box-shadow: 
    0 4rpx 16rpx rgba(2, 132, 199, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
}

.content-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #0369a1;
  margin-bottom: 8rpx;
}

.content-desc {
  display: block;
  font-size: 24rpx;
  color: #0284c7;
  line-height: 1.4;
}

.raw-content-display {
  padding: 24rpx;
  /* 升级原始内容显示效果 */
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 20rpx;
  border: 2rpx solid #f59e0b;
  margin-bottom: 16rpx;
  box-shadow: 
    0 4rpx 16rpx rgba(245, 158, 11, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
