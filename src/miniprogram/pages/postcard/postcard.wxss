.content-warning {
  display: block;
  font-size: 24rpx;
  color: #d97706;
  margin-bottom: 12rpx;
  font-weight: bold;
}

.fallback-warning {
  padding: 20rpx;
  /* 升级警告区域效果 */
  background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
  border-radius: 16rpx;
  border: 2rpx solid #ef4444;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: 
    0 4rpx 16rpx rgba(239, 68, 68, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
}

.warning-icon {
  font-size: 32rpx;
  /* 添加警告图标发光效果 */
  filter: drop-shadow(0 0 8rpx rgba(239, 68, 68, 0.5));
}

.warning-text {
  font-size: 24rpx;
  color: #dc2626;
  line-height: 1.4;
}

/* ===== 调试信息样式 ===== */
.debug-card {
  /* 升级调试卡片效果 */
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 2rpx dashed #64748b;
  box-shadow: 
    0 4rpx 16rpx rgba(100, 116, 139, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
}

.debug-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.debug-item:last-child {
  margin-bottom: 0;
}

.debug-label {
  font-size: 24rpx;
  color: #64748b;
  font-weight: bold;
  min-width: 140rpx;
  flex-shrink: 0;
}

.debug-value {
  font-size: 24rpx;
  color: #1e293b;
  font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
  line-height: 1.4;
}

.debug-preview {
  font-size: 22rpx;
  color: #64748b;
  background: #e2e8f0;
  padding: 8rpx 12rpx;
  border-radius: 6rpx;
  font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
  line-height: 1.4;
  word-break: break-all;
  flex: 1;
