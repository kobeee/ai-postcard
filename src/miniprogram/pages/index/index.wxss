/* index.wxss - 情绪罗盘首页样式 */

/* 页面基础 */
.page {
  /* 升级背景渐变，使用更现代的色彩搭配 */
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  overflow-x: hidden;
  /* 添加背景纹理效果 */
  position: relative;
}

/* 添加背景纹理层 */
.page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

/* 主容器 */
.compass-container {
  position: relative;
  min-height: 100vh;
  padding: 40rpx 30rpx;
  padding-bottom: calc(200rpx + env(safe-area-inset-bottom));
  padding-bottom: calc(200rpx + constant(safe-area-inset-bottom));
  box-sizing: border-box;
  z-index: 1;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0;
}

.floating-particle {
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  /* 优化粒子效果，添加渐变色彩 */
  background: radial-gradient(circle, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0.2) 100%);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
  animation-delay: var(--delay);
  left: var(--x);
  top: var(--y);
  /* 添加发光效果 */
  box-shadow: 0 0 10rpx rgba(255, 255, 255, 0.3);
}

@keyframes float {
  0%, 100% { 
    transform: translateY(0px) scale(1); 
    opacity: 0.3; 
  }
  50% { 
    transform: translateY(-30rpx) scale(1.3); 
    opacity: 0.9; 
    /* 添加发光动画 */
    box-shadow: 0 0 20rpx rgba(255, 255, 255, 0.5);
  }
}

/* 用户状态区域 */
.user-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  z-index: 1;
  position: relative;
}

/* 头像容器：严格正圆，避免按钮影响形状 */
.avatar-circle {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 24rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
  background: #d9d9d9; /* 灰色默认底色，若无头像时不显突兀 */
}

/* 覆盖其上的透明按钮，仅用于触发选择器 */
.avatar-overlay-btn {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 0;
  background: transparent;
  border: none;
  border-radius: 50%;
}

.avatar-overlay-btn::after {
  border: none; /* 去掉原生按钮的默认边框效果 */
}

@keyframes pulse {
  0%, 100% { 
    transform: scale(1); 
    opacity: 0.4; 
    border-color: rgba(255, 255, 255, 0.4);
  }
  50% { 
    transform: scale(1.15); 
    opacity: 0.8; 
    border-color: rgba(255, 255, 255, 0.8);
  }
}

