}

/* 传统卡片布局（降级方案） */
.traditional-card {
  width: 100%;
  height: 600rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 30rpx 70rpx rgba(0,0,0,0.1);
}

.daily-card {
  position: relative;
  width: 690rpx;   /* 与美化卡片保持一致的宽度 */
  height: 1100rpx; /* 与结构化卡片standard高度保持一致，避免背面溢出 */
  margin: 0 auto 40rpx auto;
  perspective: 1000rpx;
  cursor: pointer;
  z-index: 4; /* 高于下方回廊背景 */
}

.daily-card.flipped .card-front {
  transform: rotateY(-180deg);
}

.daily-card.flipped .card-back {
  transform: rotateY(0deg);
}

.card-front,
.card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  transition: transform 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  border-radius: 32rpx;
  overflow: hidden;
  will-change: transform;
}

.card-front {
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.95) 0%, 
    rgba(255, 255, 255, 0.85) 100%);
  backdrop-filter: blur(20px);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  padding: 48rpx;
  display: flex;
  flex-direction: column;
}

.card-back {
  transform: rotateY(180deg);
  background: linear-gradient(135deg, 
