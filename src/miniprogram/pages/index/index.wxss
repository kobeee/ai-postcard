/* index.wxss - 情绪罗盘首页样式 */

/* 页面基础 */
.page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 60%, #a8edea 100%);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  overflow-x: hidden;
}

/* 主容器 */
.compass-container {
  position: relative;
  min-height: 100vh;
  padding: 40rpx 32rpx;
  box-sizing: border-box;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0;
}

.floating-particle {
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
  animation-delay: var(--delay);
  left: var(--x);
  top: var(--y);
}

@keyframes float {
  0%, 100% { transform: translateY(0px) scale(1); opacity: 0.3; }
  50% { transform: translateY(-20px) scale(1.2); opacity: 0.8; }
}

/* 用户状态区域 */
.user-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  z-index: 1;
  position: relative;
}

.avatar-ring {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.ring-glow {
  position: absolute;
  top: -8rpx;
  left: -8rpx;
  right: -8rpx;
  bottom: -8rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 50%;
  animation: pulse 3s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 0.4; }
  50% { transform: scale(1.1); opacity: 0.8; }
}

.greeting-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.date-info {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  letter-spacing: 1rpx;
}

/* 登录容器 */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 70vh;
  text-align: center;
  z-index: 1;
  position: relative;
}

.compass-logo {
  margin-bottom: 80rpx;
}

.compass-ring {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: center;
  animation: compassRotate 20s linear infinite;
}

@keyframes compassRotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.compass-needle {
  position: absolute;
  width: 4rpx;
  height: 80rpx;
  background: linear-gradient(to top, transparent, #fff, #ff6b6b);
  border-radius: 2rpx;
  transform-origin: bottom center;
  animation: needleSwing 4s ease-in-out infinite;
}

@keyframes needleSwing {
  0%, 100% { transform: rotate(-5deg); }
  50% { transform: rotate(5deg); }
}

.compass-dot {
  width: 16rpx;
  height: 16rpx;
  background: #fff;
  border-radius: 50%;
  z-index: 1;
}

.brand-text {
  margin-bottom: 100rpx;
  text-align: center;
  width: 100%;
}

.brand-title {
  display: block;
  font-size: 64rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 24rpx;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 4rpx;
  text-align: center;
}

.brand-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  text-align: center;
  letter-spacing: 1rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 400rpx;
  margin: 0 auto;
}

.login-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 60rpx;
  padding: 32rpx 100rpx;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
  min-width: 320rpx;
  width: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  white-space: nowrap;
}

.login-btn:hover,
.login-btn-hover {
  background: rgba(255, 255, 255, 0.3) !important;
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.2);
}

.login-text {
  font-size: 30rpx;
  color: #fff;
  font-weight: 600;
  letter-spacing: 2rpx;
  text-align: center;
  white-space: nowrap;
  display: inline-block;
}

/* 卡片容器 */
.card-container {
  z-index: 1;
  position: relative;
  margin-bottom: 60rpx;
}

.daily-card {
  position: relative;
  width: 100%;
  height: 600rpx;
  margin-bottom: 40rpx;
  perspective: 1000rpx;
  cursor: pointer;
}

.daily-card.flipped .card-front {
  transform: rotateY(-180deg);
}

.daily-card.flipped .card-back {
  transform: rotateY(0deg);
}

.card-front,
.card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  transition: transform 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  border-radius: 32rpx;
  overflow: hidden;
}

.card-front {
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.95) 0%, 
    rgba(255, 255, 255, 0.85) 100%);
  backdrop-filter: blur(20px);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  padding: 48rpx;
  display: flex;
  flex-direction: column;
}

.card-back {
  transform: rotateY(180deg);
  background: linear-gradient(135deg, 
    rgba(102, 126, 234, 0.95) 0%, 
    rgba(118, 75, 162, 0.95) 100%);
  backdrop-filter: blur(20px);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  color: #fff;
}

.card-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 32rpx;
  text-align: center;
  letter-spacing: 1rpx;
}

.card-keyword {
  font-size: 72rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  margin-bottom: 32rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-quote {
  font-size: 32rpx;
  color: #555;
  line-height: 1.6;
  margin-bottom: 24rpx;
  text-align: center;
  font-style: italic;
}

.card-english {
  font-size: 26rpx;
  color: #777;
  text-align: center;
  margin-bottom: 40rpx;
  font-style: italic;
  letter-spacing: 0.5rpx;
}

.card-recommendations {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rec-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.rec-item:hover {
  background: rgba(0, 0, 0, 0.1);
  transform: translateX(8rpx);
}

.rec-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.rec-text {
  font-size: 28rpx;
  color: #555;
  flex: 1;
}

.flip-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-top: 20rpx;
  opacity: 0.6;
}

.hint-icon {
  font-size: 20rpx;
}

.hint-text {
  font-size: 22rpx;
  color: #999;
}

/* 卡片背面样式 */
.back-title {
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 40rpx;
  color: rgba(255, 255, 255, 0.9);
}

.inspiration-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.inspiration-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.ins-icon {
  font-size: 28rpx;
}

.ins-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
}

.back-footer {
  text-align: center;
  margin-top: 40rpx;
}

.compass-signature {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  font-style: italic;
}

/* 情绪墨迹区域 */
.emotion-ink {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 32rpx;
  padding: 48rpx;
  backdrop-filter: blur(20px);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
}

.ink-title {
  text-align: center;
  margin-bottom: 40rpx;
}

.title-main {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.title-sub {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.ink-canvas {
  width: 100%;
  height: 300rpx;
  background: #fafafa;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
}

.ink-actions {
  display: flex;
  gap: 24rpx;
  justify-content: center;
}

.ink-btn {
  padding: 24rpx 48rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.ink-btn.clear {
  background: rgba(0, 0, 0, 0.1);
  color: #666;
}

.ink-btn.generate {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.ink-btn.loading {
  background: linear-gradient(135deg, #ffa726, #ff7043);
  animation: generatePulse 2s ease-in-out infinite;
}

@keyframes generatePulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

/* 记忆回廊 */
.memory-gallery {
  margin-bottom: 60rpx;
  z-index: 1;
  position: relative;
}

.gallery-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 0 16rpx;
}

.gallery-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.gallery-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.gallery-scroll {
  white-space: nowrap;
}

.memory-card {
  display: inline-block;
  width: 200rpx;
  height: 280rpx;
  margin-right: 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 32rpx;
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.memory-card:hover {
  transform: translateY(-8rpx);
  box-shadow: 0 16rpx 32rpx rgba(0, 0, 0, 0.2);
}

.memory-date {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.memory-keyword {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.memory-mood {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  border-radius: 0 0 20rpx 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  text-align: center;
  z-index: 1;
  position: relative;
}

.empty-compass {
  margin-bottom: 40rpx;
}

.compass-ring.empty {
  border-color: rgba(255, 255, 255, 0.3);
  animation: none;
}

.compass-needle.inactive {
  background: rgba(255, 255, 255, 0.5);
  animation: none;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.empty-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(10px);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-compass .compass-ring {
  border-color: rgba(255, 255, 255, 0.6);
  background: rgba(255, 255, 255, 0.1);
}

.compass-needle.spinning {
  animation: spin 2s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  color: #fff;
  margin: 40rpx 0;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.loading-steps {
  display: flex;
  gap: 60rpx;
  margin-top: 40rpx;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  opacity: 0.4;
  transition: all 0.5s ease;
}

.step.active {
  opacity: 1;
  transform: scale(1.1);
}

.step-icon {
  font-size: 40rpx;
}

.step-text {
  font-size: 22rpx;
  color: #fff;
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .compass-container {
    padding: 32rpx 24rpx;
  }
  
  .brand-title {
    font-size: 56rpx;
  }
  
  .card-keyword {
    font-size: 64rpx;
  }
  
  .loading-steps {
    gap: 40rpx;
  }
}