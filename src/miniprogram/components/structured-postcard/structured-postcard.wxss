/* structured-postcard.wxss - 🔮 心象签组件样式（拷贝自首页挂件） */

/* ==================== 基础3D场景 ==================== */

.charm-scene {
  position: relative;
  margin: 0 auto;
  perspective: 1000rpx;
  perspective-origin: center center;
}

.charm-flipper {
  position: relative;
  width: 100%;
  height: 100%;
  transform-style: preserve-3d;
  transition: transform 0.5s ease-in-out;
}

.charm-flipper.flipped {
  transform: rotateY(180deg);
}

.charm-face {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  border-radius: 24rpx;
  overflow: hidden;
}

.charm-face-back {
  z-index: 1;
  transform: rotateY(180deg);
  background: transparent;
  /* 完全透明，只让解签笺有背景 */
}

.charm-face-front {
  z-index: 2;
  transform: rotateY(0deg);
}


/* ==================== 正面挂件样式 ==================== */


/* 🔮 左上角竖排签名 - 调整位置更靠近挂件 */
.charm-name-vertical {
  position: absolute;
  top: 12%;  /* 往下调整 */
  left: 20%; /* 往右调整，更靠近挂件 */
  z-index: 20;
  font-family: 'ZhiMangXing', 'STKaiti', 'KaiTi', serif;
  pointer-events: none;
  /* 🔑 关键：简单的竖排布局 */
  display: flex;
  flex-direction: column;
  align-items: center;
  /* 📦 背景装饰 */
  background: rgba(255, 255, 255, 0.15);
  padding: 10rpx 8rpx;
  border-radius: 16rpx;
  backdrop-filter: blur(6rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.name-char {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  line-height: 1;
  font-family: inherit;
  /* 🔑 关键：移除冲突的样式 */
  margin-bottom: 4rpx;
  /* 🎨 文字效果 */
  text-shadow: 
    0 1rpx 3rpx rgba(0, 0, 0, 0.4),
    0 0 6rpx rgba(255, 255, 255, 0.2);
  -webkit-font-smoothing: antialiased;
}

.charm-name-vertical .name-char:last-child {
  margin-bottom: 0;
}

/* 🎨 签名装饰点缀 - 简化版 */
.charm-name-decoration {
  width: 3rpx;
  height: 30rpx;
  margin-top: 6rpx;
  border-radius: 2rpx;
  opacity: 0.5;
}

/* 已移除不必要的中间装饰元素，保持签体简洁美观 */

/* 祝福文字样式调整 - 显示在挂件下方 */
.charm-blessing {
  position: absolute;
  bottom: 80rpx;  /* 调整位置到翻面提示上方 */
  left: 50%;
  transform: translateX(-50%);
  font-size: 28rpx;  /* 稍微缩小 */
  font-weight: 400;
  text-align: center;
  font-family: 'LongCang', 'STKaiti', 'KaiTi', serif;
  opacity: 0.85;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.2);
  max-width: 80%;
  word-wrap: break-word;
}

.charm-glow-layer {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;
}

.charm-glow {
  transform: scale(1.2);
  transition: opacity 0.3s ease;
}

.charm-container {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
  animation: charmHang 4s ease-in-out infinite alternate;
  transform: scale(1.0); /* 调大挂件到标准大小 */
}

@keyframes charmHang {
  0% {
    transform: scale(1.0) translateY(0) rotate(0deg);
  }
  100% {
    transform: scale(1.0) translateY(-10rpx) rotate(2deg);
  }
}

.charm-image {
  width: 950rpx;   /* 进一步增大，利用PNG透明背景 */
  height: 950rpx;  /* iPhone 15 Pro Max约475px */
  filter: drop-shadow(0 8rpx 24rpx rgba(0, 0, 0, 0.15));
  transition: filter 0.3s ease;
}

.charm-default-shape {
  width: 950rpx;   /* 进一步增大，利用PNG透明背景 */
  height: 950rpx;  /* iPhone 15 Pro Max约475px */
  background: linear-gradient(135deg, 
    rgba(232, 244, 253, 0.9) 0%, 
    rgba(178, 190, 195, 0.8) 50%,
    rgba(232, 244, 253, 0.9) 100%
  );
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 
    0 8rpx 24rpx rgba(0, 0, 0, 0.15),
    inset 0 2rpx 8rpx rgba(255, 255, 255, 0.8),
    inset 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(4rpx); /* 减弱模糊效果，提高清晰度 */
  position: relative;
  overflow: hidden;
}

/* 为默认形状添加莲花纹理 */
.charm-default-shape::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 60%;
  height: 60%;
  transform: translate(-50%, -50%);
  background-image: 
    radial-gradient(circle at 30% 40%, rgba(255, 255, 255, 0.6) 2rpx, transparent 2rpx),
    radial-gradient(circle at 70% 30%, rgba(255, 255, 255, 0.4) 1rpx, transparent 1rpx),
    radial-gradient(circle at 40% 70%, rgba(255, 255, 255, 0.5) 1.5rpx, transparent 1.5rpx),
    radial-gradient(circle at 60% 60%, rgba(255, 255, 255, 0.3) 1rpx, transparent 1rpx);
  background-size: 80rpx 80rpx, 120rpx 120rpx, 100rpx 100rpx, 60rpx 60rpx;
  opacity: 0.7;
  pointer-events: none;
}

.charm-content-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 40rpx;
  z-index: 3;
}

/* 简化标题样式，不再需要复杂的标题显示 */

/* 挂件装饰效果 - 保留适度的sparkle闪烁效果 */
.charm-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 4;
}

.charm-sparkle {
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.3) 100%);
  border-radius: 50%;
  animation: sparkle 3s ease-in-out infinite;
}

.charm-sparkle-1 {
  top: 20%;
  left: 15%;
  animation-delay: 0s;
}

.charm-sparkle-2 {
  top: 30%;
  right: 20%;
  animation-delay: 1s;
}

.charm-sparkle-3 {
  bottom: 25%;
  left: 25%;
  animation-delay: 2s;
}

@keyframes sparkle {
  0%, 100% {
    opacity: 0.3;
    transform: scale(0.8);
  }
  50% {
    opacity: 1;
    transform: scale(1.2);
  }
}

/* 翻面提示 */
.flip-hint-charm {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(3rpx); /* 减弱模糊效果，保持层次感 */
  z-index: 5;
  opacity: 0.7;
  transition: opacity 0.3s ease;
}

.charm-flipper:hover .flip-hint-charm {
  opacity: 1;
}

.flip-hint-icon {
  font-size: 24rpx;
  color: #667eea;
}

.flip-hint-text {
  font-size: 22rpx;
  color: #4b5563;
  font-weight: 500;
}

