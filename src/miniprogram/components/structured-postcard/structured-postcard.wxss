  box-shadow: 
    2rpx 2rpx 6rpx rgba(139, 69, 19, 0.3),
    0 0 10rpx rgba(255, 255, 255, 0.6),
    inset 1rpx 1rpx 3rpx rgba(212, 175, 140, 0.5),
    inset -1rpx -1rpx 2rpx rgba(90, 62, 43, 0.3);
}

/* 缩小挂件装饰 - 现在在解签笺头部 */
.charm-decoration-mini {
  position: absolute;
  top: 16rpx;
  right: 24rpx;
  width: 80rpx;  /* 略小一些，适应解签笺头部 */
  height: 80rpx;
  z-index: 3;
  opacity: 0;
  transform: translateY(10rpx) scale(0.8);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.charm-decoration-mini.visible {
  opacity: 0.6;
  transform: translateY(0) scale(1);
}

.mini-charm-image {
  width: 100%;
  height: 100%;
  filter: drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.1));
}

.mini-charm-sway {
  position: absolute;
  top: -10rpx;
  left: 50%;
  width: 2rpx;
  height: 20rpx;
  background: linear-gradient(to bottom, #d1d5db, transparent);
  transform: translateX(-50%);
  animation: sway 4s ease-in-out infinite alternate;
}

@keyframes sway {
  0% {
    transform: translateX(-50%) rotate(-2deg);
  }
  100% {
    transform: translateX(-50%) rotate(2deg);
  }
}

