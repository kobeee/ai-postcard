/* 结构化明信片组件样式 - 重构后的5层架构 */

/* ================== 第1层：透视容器 ================== */
.card-scene {
  position: relative;
  width: 690rpx;
  height: 1100rpx; 
  margin: 0 auto;
  perspective: 1000rpx;
  perspective-origin: center center;
  /* 只负责3D透视，无其他样式 */
}

/* ================== 第2层：翻转控制器 ================== */
.card-flipper {
  position: relative;
  width: 100%;
  height: 100%;
  transform-style: preserve-3d;
  transform-origin: center center;
  transition: transform 0.8s ease;
  /* 只负责3D翻转变换，无其他样式 */
}

.card-flipper.flipped {
  transform: rotateY(180deg);
  /* 纯净的3D翻转，无任何其他transform干扰 */
}

/* ================== 第3层：正反面容器 ================== */
.card-face {
  position: absolute;
  top: 0;
  left: 0; 
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
  /* 只负责3D面向控制，无其他样式 */
}

.card-face-back {
  transform: rotateY(180deg);
  /* 背面预旋转180度 */
}

/* ================== 第4层：视觉外壳 ================== */
.postcard-shell {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12), 0 8rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  backdrop-filter: blur(10rpx);
  cursor: pointer;
  /* 负责所有视觉效果：阴影、圆角、背景模糊等 */
}

.postcard-shell:hover {
  transform: translateY(-4rpx) scale(1.02);
  box-shadow: 0 24rpx 64rpx rgba(0, 0, 0, 0.16), 0 12rpx 24rpx rgba(0, 0, 0, 0.12);
  /* hover效果只在视觉外壳层，不干扰3D翻转 */
}

.postcard-shell.animated {
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  /* 动画状态样式 */
}

/* 背面视觉外壳的特殊样式 */
.postcard-shell-back {
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.95) 0%, 
    rgba(248, 250, 252, 0.95) 50%,
    rgba(255, 255, 255, 0.95) 100%);
  /* 背面纯色背景，无背景图片 */
}

/* 背景图片归属第4层 */
.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  opacity: 1;
  object-fit: cover;
  transition: opacity 0.3s ease;
}

/* 装饰层归属第4层 */
.decoration-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 3;
  pointer-events: none;
  border-radius: 32rpx;
  overflow: hidden;
}

.gradient-overlay {
  width: 100%;
  height: 100%;
  background: linear-gradient(
    45deg,
    rgba(99, 102, 241, 0.08) 0%,
    rgba(139, 92, 246, 0.08) 25%,
    rgba(236, 72, 153, 0.08) 50%,
    rgba(139, 92, 246, 0.08) 75%,
    rgba(99, 102, 241, 0.08) 100%
  );
  background-size: 400% 400%;
  animation: gradientShift 6s ease-in-out infinite;
  opacity: 0.6;
}

@keyframes gradientShift {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

/* ================== 第5层：内容层 ================== */
.postcard-content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: linear-gradient(to bottom, 
    rgba(255, 255, 255, 0.75) 0%,
    rgba(255, 255, 255, 0.65) 30%,
    rgba(255, 255, 255, 0.7) 70%,
    rgba(255, 255, 255, 0.75) 100%);
  backdrop-filter: blur(8rpx);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  /* 内容层负责内容的布局和背景 */
}

/* 背面内容层特殊样式 - 支持滚动，隐藏滚动条 */
.back-content {
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.95) 0%,
    rgba(248, 250, 252, 0.95) 50%,
    rgba(255, 255, 255, 0.95) 100%);
  backdrop-filter: blur(12rpx);
  
  /* 启用垂直滚动 */
  overflow-y: auto;
  overflow-x: hidden;
  
  /* 隐藏滚动条 - 兼容各种浏览器 */
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE and Edge */
  
  /* 滚动行为优化 */
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch; /* iOS滚动优化 */
}

/* 隐藏 Webkit 浏览器滚动条 */
.back-content::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
}

