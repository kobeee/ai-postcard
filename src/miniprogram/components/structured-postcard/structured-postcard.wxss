/* 结构化明信片组件样式 */

.structured-postcard-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 15rpx;
}

/* 主卡片 */
.postcard-main {
  position: relative;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  cursor: pointer;
  backdrop-filter: blur(10rpx);
}

.postcard-main:hover {
  transform: translateY(-8rpx);
  box-shadow: 0 30rpx 80rpx rgba(0, 0, 0, 0.2);
}

.postcard-main.animated {
  transition: all 0.3s ease;
}

/* 背景图片 */
.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  opacity: 0.8;
}

/* 内容层 */
.content-layer {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: linear-gradient(
    to bottom,
    rgba(255, 255, 255, 0.9) 0%,
    rgba(255, 255, 255, 0.8) 50%,
    rgba(255, 255, 255, 0.9) 100%
  );
  backdrop-filter: blur(5rpx);
}

/* 标题和情绪区域 */
.header-section {
  margin-bottom: 25rpx;
}

.card-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 12rpx;
  line-height: 1.2;
}

.mood-indicator {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.mood-primary {
  font-size: 22rpx;
  color: #666;
  background: rgba(99, 102, 241, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
}

.mood-intensity {
  font-size: 20rpx;
  color: #f59e0b;
}

/* 主要文案 */
.main-content-section {
  flex: 1;
  margin-bottom: 25rpx;
}

.main-text {
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
  text-align: justify;
  text-justify: inter-ideograph;
  -webkit-hyphens: auto;
  hyphens: auto;
  letter-spacing: 0.3rpx;
}

/* 热点话题 */
.hot-topics-section {
  margin-bottom: 25rpx;
}

.topic-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  padding: 12rpx 16rpx;
  background: rgba(139, 92, 246, 0.05);
  border-radius: 18rpx;
  border-left: 4rpx solid #8b5cf6;
}

.topic-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.topic-text {
  font-size: 22rpx;
  color: #555;
  flex: 1;
}

/* 名言警句 */
.quote-section {
  margin-bottom: 25rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
  border-radius: 18rpx;
  border-left: 6rpx solid #6366f1;
}

.quote-text {
  display: block;
  font-size: 24rpx;
  font-style: italic;
  color: #374151;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.quote-author {
  display: block;
  font-size: 20rpx;
  color: #6b7280;
  text-align: right;
  margin-bottom: 8rpx;
}

.quote-translation {
  display: block;
  font-size: 22rpx;
  color: #9ca3af;
  text-align: center;
  font-weight: 300;
}

/* 推荐内容 */
.recommendations-section {
  margin-bottom: 25rpx;
}

.recommendations-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 2rpx solid #e5e7eb;
  cursor: pointer;
}

.recommendations-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #374151;
}

.expand-icon {
  font-size: 20rpx;
  color: #6b7280;
  transition: transform 0.3s ease;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

.recommendations-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.recommendations-content.expanded {
  max-height: 1000rpx;
}

.recommendation-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx;
  margin-top: 12rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
}

.recommendation-item:hover {
  border-color: #6366f1;
  background: rgba(99, 102, 241, 0.05);
  transform: translateX(8rpx);
}

.recommendation-item.music {
  border-left: 6rpx solid #f59e0b;
}

.recommendation-item.book {
  border-left: 6rpx solid #10b981;
}

.recommendation-item.movie {
  border-left: 6rpx solid #ef4444;
}

.rec-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  margin-top: 2rpx;
}

.rec-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.rec-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 6rpx;
}

.rec-subtitle {
  font-size: 20rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.rec-reason {
  font-size: 18rpx;
  color: #9ca3af;
  line-height: 1.3;
}

/* 底部信息 */
.footer-section {
  margin-top: auto;
}

.context-info {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.context-item {
  font-size: 18rpx;
  color: #6b7280;
  background: rgba(229, 231, 235, 0.8);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.share-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  color: white;
  border-radius: 18rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.share-button:hover {
  background: linear-gradient(135deg, #4f46e5, #7c3aed);
  transform: translateY(-2rpx);
}

.share-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.share-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 装饰性动效层 */
.decoration-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 3;
  pointer-events: none;
}

.gradient-overlay {
  width: 100%;
  height: 100%;
  background: linear-gradient(
    45deg,
    rgba(99, 102, 241, 0.1) 0%,
    rgba(139, 92, 246, 0.1) 25%,
    rgba(236, 72, 153, 0.1) 50%,
    rgba(139, 92, 246, 0.1) 75%,
    rgba(99, 102, 241, 0.1) 100%
  );
  background-size: 400% 400%;
  animation: gradientShift 4s ease-in-out infinite;
}

@keyframes gradientShift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .postcard-main {
    width: 95%;
    max-width: 650rpx;
  }
  
  .card-title {
    font-size: 32rpx;
  }
  
  .main-text {
    font-size: 24rpx;
  }
  
  .quote-text {
    font-size: 22rpx;
  }
  
  .rec-title {
    font-size: 22rpx;
  }
}
