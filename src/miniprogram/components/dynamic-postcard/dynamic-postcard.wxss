/* components/dynamic-postcard/dynamic-postcard.wxss */

.dynamic-postcard-container {
  position: relative;
  width: 100%;
  min-height: 500rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.postcard-content {
  position: relative;
  width: 100%;
  min-height: 500rpx;
  transition: all 0.3s ease;
}

/* Rich Text 动态内容样式 */
.rich-content {
  width: 100%;
  height: 100%;
}

/* 兜底内容样式 */
.fallback-content {
  position: relative;
  width: 100%;
  min-height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 32rpx;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.content-overlay {
  position: relative;
  z-index: 2;
  background: rgba(255, 255, 255, 0.9);
  padding: 24rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
  text-align: center;
  max-width: 80%;
}

.postcard-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.postcard-concept {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.3;
  opacity: 0.8;
}

/* 动画层 */
.animation-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 3;
}

/* 交互提示 */
.interactive-hint {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  background: rgba(0, 0, 0, 0.7);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  z-index: 10;
  animation: pulse 2s infinite;
}

.hint-text {
  font-size: 22rpx;
  color: #fff;
}

/* 动画定义 */
@keyframes pulse {
  0%, 100% {
    opacity: 0.6;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.05);
  }
}

/* 触摸反馈 */
.postcard-content:active {
  transform: scale(0.98);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .postcard-title {
    font-size: 28rpx;
  }
  
  .postcard-concept {
    font-size: 22rpx;
  }
}

/* 暗色模式支持 */
@media (prefers-color-scheme: dark) {
  .dynamic-postcard-container {
    background: #1a1a1a;
  }
  
  .content-overlay {
    background: rgba(0, 0, 0, 0.8);
  }
  
  .postcard-title {
    color: #fff;
  }
  
  .postcard-concept {
    color: #ccc;
  }
}