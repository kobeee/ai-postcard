<!--components/dynamic-postcard/dynamic-postcard.wxml-->
<view class="dynamic-postcard-container">
  <!-- 动态内容渲染区域 -->
  <view class="postcard-content" style="{{dynamicStyle}}">
    <!-- 使用rich-text组件渲染动态WXML内容 -->
    <rich-text 
      wx:if="{{hasRichContent}}"
      class="rich-content" 
      nodes="{{richNodes}}"
    ></rich-text>
    
    <!-- 兜底渲染：传统方式显示明信片 -->
    <view wx:else class="fallback-content">
      <!-- 背景图片 -->
      <image 
        wx:if="{{postcardData.image_url}}"
        class="background-image"
        src="{{postcardData.image_url}}" 
        mode="aspectFill"
      ></image>
      
      <!-- 明信片文本内容 -->
      <view class="content-overlay">
        <text class="postcard-title">{{postcardData.content}}</text>
        <text class="postcard-concept" wx:if="{{postcardData.concept}}">{{postcardData.concept}}</text>
      </view>
    </view>
    
    <!-- 动画效果容器 -->
    <view 
      wx:if="{{hasAnimation}}" 
      class="animation-layer"
      animation="{{animationData}}"
    >
      <!-- 动画元素将在这里动态添加 -->
    </view>
  </view>
  
  <!-- 交互提示 -->
  <view wx:if="{{hasInteractive}}" class="interactive-hint">
    <text class="hint-text">✨ 点击体验交互效果</text>
  </view>
</view>